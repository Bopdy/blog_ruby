<h1><%= @task.title %></h1>
<div>
  <p><%= @task.details %></p>
</div>
<% if @task.completed %>
<p><%= check_box_tag("@task", 'completed', @task.completed) %>
This task is completed</p>
<% else %>
<p><%= check_box_tag("@task", 'completed', @task.completed) %>
This task is not yet completed</p>
<% end %>

<div>
  <%= link_to 'Edit this task', edit_task_path %>
</div>

<div>
  <%= link_to 'Delete', delete_task_path, method: :delete, data: {confirm: "Are you sure?"} %>
</div>

<div>
  <%= link_to 'Back to list', tasks_path %>
</div>
